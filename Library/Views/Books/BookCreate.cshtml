@model BookVeiwModel

<form method="post" asp-controller="Books" asp-action="Create">
    <div class="form-group">
        <label asp-for="Book.Name">Название</label>
        <div>
            <span asp-validation-for="Book.Name" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="Book.Name" />
    </div>
    <div class="form-group">
        <label asp-for="Book.Genre">Жанр</label>
        <div>
            <span asp-validation-for="Book.Genre" class="text-danger">
            </span>
        </div>
        <input class="form-control" asp-for="Book.Genre" />
    </div>
    <div class="form-group">
        <label asp-for="Book.Year">Год</label>
        <div>
            <span asp-validation-for="Book.Year" class="text-danger">
            </span>
        </div>
        <input class="form-control" asp-for="Book.Year" />
    </div>
    <div class="form-group">
        <label asp-for="Book.Author.Id">Автор</label>
        <div>
            <span asp-validation-for="Book.Author.Id" class="text-danger"></span>
        </div>
        <select asp-for="Book.Author.Id" class="form-control" asp-items="@(new SelectList(Model?.Authors, "Id", "FullName"))">
            <option value="" disabled selected>Выберите автора</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Book.Publisher.Id">Автор</label>
        <div>
            <span asp-validation-for="Book.Publisher.Id" class="text-danger"></span>
        </div>
        <select asp-for="Book.Publisher.Id" class="form-control" asp-items="@(new SelectList(Model?.Publishers, "Id", "Name"))">
            <option value="" disabled selected>Выберите издателя</option>
        </select>
    </div>
    <button class="btn btn-primary mt-2" type="submit">Создать</button>
    <a class="btn btn-secondary mt-2" asp-action="list">Назад</a>
</form>
