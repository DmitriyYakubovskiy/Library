@model LoginModel

<main class="form-signin w-100 m-auto">
    <form asp-action="Login" asp-controller="Account">
        <div class="validation" asp-validation-summary="ModelOnly"></div>

        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
        <div class="form-floating">
            <input type="email" class="form-control" placeholder="name@example.com" asp-for="Email" />
            <label asp-for="Email">Введите Email</label>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" placeholder="Password" asp-for="Password" />
            <label asp-for="Password">Введите пароль</label>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-check text-start my-3">
            <input class="form-check-input" type="checkbox" asp-for="RememberMe">
            @*<label class="form-check-label" asp-for="RememberMe">
            Запомнить меня
            </label>*@
            <label class="form-check-label" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
        </div>
        <button class="btn btn-primary w-100 py-2" type="submit">Войти</button>
    </form>
</main>
<style>
    .form-signin {
        max-width: 330px;
    }
</style>